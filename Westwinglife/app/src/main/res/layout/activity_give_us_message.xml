    <TextView android:text="电话"
        android:textSize="15sp"
        android:textColor="@color/black_base"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_leave_word_phone"
            android:layout_weight="8"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textColorHint="#999999"
            android:layout_marginLeft="15dp"
            android:textColor="#333333"
            android:inputType="phone"
            />
    </LinearLayout>
    <TextView android:text="商品描述"
        android:textSize="15sp"
        android:textColor="@color/black_base"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_leave_word_URLs"
            android:background="@null"
            android:layout_marginTop="15dp"
            android:hint="如商品名称或UPC等"
            android:textColor="#333333"
            android:textSize="13sp"
            android:paddingLeft="15dp"
            android:textColorHint="#999999"
            android:gravity="left|top"
            android:minLines="4"
            android:inputType="textMultiLine"
            />
    </LinearLayout>
    <TextView android:text="需求数量"
        android:textSize="15sp"
        android:textColor="@color/black_base"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_leave_word_seek_quantity"
            android:layout_weight="8"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textColorHint="#999999"
            android:layout_marginLeft="15dp"
            android:textColor="#333333"
            android:inputType="number"
            />
    </LinearLayout>
    <TextView android:text="款式描述"
        android:textSize="15sp"
        android:textColor="@color/black_base"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        >
        <EditText
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:id="@+id/et_leave_word_say"
            android:gravity="left|top"
            android:background="@null"
            android:textColor="#333333"
            android:textSize="13sp"
            android:paddingLeft="15dp"
            android:textColorHint="#999999"
            android:minLines="6"
            android:inputType="textMultiLine"
            />
    </LinearLayout>
<Button
    android:layout_width="168dp"
    android:layout_height="38dp"
    android:layout_marginTop="40dp"
    android:text="提交"
    android:layout_gravity="center_horizontal"
    android:textColor="@drawable/bg_cart_textcolor"
    android:background="@drawable/bg_btn_login"
    android:id="@+id/b_liuyan_submit"
    />

</LinearLayout>
</ScrollView>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_Whether_there_is_network"
        android:orientation="vertical"
        >
<ImageView
    android:layout_width="70dp"
    android:layout_height="53dp"
    android:src="@drawable/wifi"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="110dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络连接失败"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#535353"
        android:layout_marginTop="43dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请检查您的手机是否联网"
        android:textColor="#8e8e8e"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28sp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/b_reload"
        android:text="重新加载"
        android:textSize="17sp"
        android:textColor="@color/red_base"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="74dp"
        android:background="@drawable/buttonstyle"
        />
    </LinearLayout>
</LinearLayout>