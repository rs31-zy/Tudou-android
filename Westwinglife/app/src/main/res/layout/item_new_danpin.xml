<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlt_img_rule"
        android:layout_width="match_parent"
        android:layout_height="360dp">
        <ImageView
            android:id="@+id/iv_new_danpin"
            android:src="@drawable/defult_good_img"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_danpin_name"
            android:textColor="@color/black_base"
            android:textSize="13sp"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_danpin_desc"
            android:textColor="@color/gray_six"
            android:textSize="12sp"
            android:text=""
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_danpin_dot"
                android:layout_width="13dp"
                android:layout_height="13dp" />
            <TextView
                android:id="@+id/tv_danpin_dot"
                android:textColor="@color/black_base"
                android:textSize="12sp"
                android:text=""
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_danpin_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/color_selected"
                android:layout_height="wrap_content" />
            <ImageView android:id="@+id/iv_danpin_cart"
                android:src="@drawable/gouwuche_lv"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView android:id="@+id/iv_danpin_shoucang"
                android:src="@drawable/shangpinxiangqing_guanzhu"
                android:layout_marginLeft="20dp"
                android:layout_width="23dp"
                android:layout_height="19dp" />
            <ImageView android:id="@+id/iv_danpin_share"
                android:src="@drawable/shangpinxiangqing_botton_fenixang"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="21dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>