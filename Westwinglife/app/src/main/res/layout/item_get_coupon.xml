<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@color/backcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llt_coupon_status"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/big_orange"
        android:layout_width="match_parent"
        android:layout_height="74dp">
        <LinearLayout
            android:id="@+id/llt_is_manjian"
            android:orientation="horizontal"
            android:layout_marginLeft="13dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_dallor"
                android:text="¥"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/tv_coupon_num"
                android:text="666"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="50dp" />

    <LinearLayout android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_width="135dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_coupon_name"
            android:text="请于2016年8月15日前领取"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_coupon_can_use_price"
            android:text="满100美元可用"
            android:singleLine="true"
            android:textColor="@color/big_orange"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_can_use_time"
            android:text="有效期至3天"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/bg_get_coupon"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_to_getcoupon"
                    android:text="点击          领取"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:background="@drawable/bg_get_coupon_small"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>